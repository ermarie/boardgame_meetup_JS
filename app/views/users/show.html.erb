
<script type="text/javascript" src="games.js"></script>

<h1><%= @user.name %></h1>
</br>
<% if @user == current_user %>
    <h4>Your Events are:</h4>
    <% if !@events.empty? %>
        <% @events.each do |event| %>
            <div>
                <%= link_to event.name, event_path(event) %></br>
                <%= event.date_time.to_formatted_s(:long_ordinal) %></br>
            </div>
        <% end %>
    <% end %>
    <div>
        <%= button_to "Add New Event", new_event_path, method: "get" %>
    </div>
    <div>
        <%= button_to "See All Events", events_path, method: "get" %>
    </div>
<% end %>
</br>

<h4>Your Games:</h4>

<% if !@games.empty? %>
    <ul>
    <% @games.each do |game| %>
        <li><a href="#" data-id="${game.id}" onClick="displayGame(${game.id})"><%= game.name %></a></li>
    <% end %>
    </ul>
<% end %>

<button onClick="displayCreateForm()">Add New Game</button>
<button onClick="getGames()">See All Games</button>

<div id="games-form"></div>
<div id="all-games"><ul id='games-ul'></ul></div>


